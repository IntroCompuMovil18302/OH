<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="149dp"
        android:layout_height="104dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/nomProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:paddingBottom="5dp"
        android:paddingRight="30dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/propProd"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomProd"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descProd"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/propProd"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:text="TextView" />

    <TextView
        android:id="@+id/precioProd"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomProd"
        android:layout_toEndOf="@+id/propProd"
        android:layout_toRightOf="@+id/propProd"
        android:gravity="right"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/starsProd"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nomProd"
        android:layout_toRightOf="@+id/nomProd"
        app:srcCompat="@drawable/stars" />

</RelativeLayout>